<%= form_for track, :html => { :multipart => true } do |f| %>
	<div class="form-group">
		<%= f.label :title, 'Title:' %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :artist, 'Artist:' %>
		<%= f.text_field :artist, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :audio, 'Track:' %>
		<%= f.file_field :audio %>
	</div>

	<%= f.submit "Upload Song", class: "btn btn-default" %>
<% end %>
